<!-- LAUNCH FILE FOR ROS Topside -->
<launch>
    <!-- Run MAVROS apm.launch -->
    <arg name="fcu_url" default="udp://0.0.0.0:14550@" />
    <arg name="gcs_url" default="udp://0.0.0.0:14551@" />
    <arg name="system_id" default="1" />

    <node pkg="mavros" type="mavros_node" name="mavros" output="screen">
        <param name="fcu_url" value="$(arg fcu_url)" />
        <param name="gcs_url" value="$(arg gcs_url)" />
        <param name="system_id" value="$(arg system_id)" />
    </node>

    <!-- Run the MBE ROS Publisher -->
    <include file="$(find user_sensor_interface)/launch/camera_MBE.launch" />

</launch>
